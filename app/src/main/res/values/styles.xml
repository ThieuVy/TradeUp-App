<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CustomTabText" />
    <!-- Profile Section Headers -->
    <style name="ProfileSectionHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal" tools:targetApi="26">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Profile Activity Cards -->
    <style name="ProfileActivityCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <style name="ProfileActivityCardContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="ProfileActivityCardIcon">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="ProfileActivityCardNumber">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProfileActivityCardLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Profile Menu Items -->
    <style name="ProfileMenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@color/menu_item_background</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ProfileMenuIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:tint">@color/icon_tint_color</item>
    </style>

    <style name="ProfileMenuText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ProfileMenuChevron">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:src">@drawable/ic_chevron_right</item>
        <item name="android:tint">@color/text_secondary</item>
    </style>

    <style name="PublicProfileStatNumber">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="PublicProfileStatLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="FilterSectionTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FilterEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">14dp</item>
        <item name="android:background">@drawable/edit_text_background</item> <!-- Bạn cần tạo drawable này -->
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="FilterAutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">14dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:inputType">none</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>
    <!-- Style cho các Tab trong màn hình "Quản lý tin đăng" -->
    <style name="MyListingTab" parent="Widget.AppCompat.TextView">
        <!-- Kích thước và vị trí -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">4dp</item>

        <!-- Font chữ -->
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>

        <!-- Màu sắc mặc định (khi không được chọn) -->
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:background">@android:color/transparent</item>

        <!-- Hiệu ứng khi nhấn -->
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <!-- Style chung cho mỗi item menu (LinearLayout) -->
    <style name="BottomAppBar_MenuItemContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Style cho ImageView bên trong item menu -->
    <style name="BottomAppBar_MenuIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <!-- Màu sẽ được set trong code Java/Kotlin -->
    </style>

    <!-- Style cho TextView bên trong item menu -->
    <style name="BottomAppBar_MenuText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <!-- Màu sẽ được set trong code Java/Kotlin -->
    </style>
    <!-- Style chung cho các tiêu đề mục trong màn hình Đăng tin -->
    <style name="PostSectionTitle" parent="Widget.AppCompat.TextView">
        <!-- Kích thước và vị trí -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>

        <!-- Font chữ -->
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
        <item name="android:textStyle">bold</item>

        <!-- Màu sắc -->
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Style chung cho các tiêu đề mục trên trang chủ -->
    <style name="HomeSectionTitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style cho container của tiêu đề (khi có nút "Tất cả") -->
    <style name="HomeSectionTitle.Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <!-- Style cho Text của tiêu đề (khi nằm trong container) -->
    <style name="HomeSectionTitle.Text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style cho nút "Tất cả" -->
    <style name="HomeSectionSeeAll" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="InfoLabel" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="InfoValue" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/bottom_border</item>
    </style>

    <!-- Style cho các icon thống kê (lượt xem, đề nghị, thời gian) -->
    <style name="PostManagementIcon">
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <!-- Dùng màu phụ để không quá nổi bật -->
        <item name="android:tint">@color/text_secondary</item>
    </style>

    <!-- Style cho các đoạn text thống kê đi kèm icon -->
    <style name="PostManagementStat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Tạo khoảng cách nhỏ với icon bên trái -->
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <!-- Dùng màu và kích thước chữ nhỏ, đồng bộ với icon -->
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Style cho các icon nhỏ (vị trí, thời gian) trong danh sách -->
    <style name="ListingInfoIcon">
        <item name="android:layout_width">14dp</item>
        <item name="android:layout_height">14dp</item>
        <!-- Tint color để làm cho icon có màu xám phụ, không quá nổi bật -->
        <item name="android:tint">@color/text_secondary</item>
    </style>

    <!-- Style cho các text nhỏ (vị trí, thời gian) đi kèm icon -->
    <style name="ListingInfoText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Tạo khoảng cách nhỏ so với icon bên trái -->
        <item name="android:layout_marginStart">4dp</item>
        <!-- Kích thước chữ nhỏ cho thông tin phụ -->
        <item name="android:textSize">12sp</item>
        <!-- Màu chữ đồng bộ với màu của icon -->
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="HomeSectionHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="HomeSectionTitleNoMargin" parent="HomeSectionTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="HomeSeeAllText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HomeEmptyStateText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>