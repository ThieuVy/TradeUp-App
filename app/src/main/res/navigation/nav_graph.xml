<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_profile"
    tools:ignore="InvalidNavigation">

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.testapptradeup.fragments.ProfileFragment"
        android:label="Hồ sơ"
        tools:layout="@layout/fragment_profile">

        <action
            android:id="@+id/action_profileFragment_to_publicProfileFragment"
            app:destination="@id/publicProfileFragment" />
        <action
            android:id="@+id/action_profileFragment_to_myListingsFragment"
            app:destination="@id/myListingsFragment" />

        <!-- All actions originating from ProfileFragment are now nested here -->
        <action
            android:id="@+id/action_navigation_profile_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
        <action
            android:id="@+id/action_profile_to_buy_orders"
            app:destination="@+id/fragment_buy_orders" />
        <action
            android:id="@+id/action_profile_to_sell_orders"
            app:destination="@+id/fragment_sell_orders" />
        <action
            android:id="@+id/action_profile_to_purchase_history"
            app:destination="@+id/fragment_purchase_history" />
        <action
            android:id="@+id/action_profile_to_bank_account"
            app:destination="@+id/fragment_bank_account" />
        <action
            android:id="@+id/action_profile_to_help_center"
            app:destination="@+id/fragment_help_center" />
        <action
            android:id="@+id/action_profile_to_feedback"
            app:destination="@+id/fragment_feedback" />
        <action
            android:id="@+id/action_profile_to_login"
            app:destination="@+id/fragment_login" />
        <action
            android:id="@+id/action_navigation_profile_to_editProfileFragment2"
            app:destination="@id/editProfileFragment" />
    </fragment>

    <fragment
        android:id="@+id/myListingsFragment"
        android:name="com.example.testapptradeup.fragments.MyListingsFragment"
        android:label="Danh sách của tôi"
        tools:layout="@layout/fragment_my_listings" >
        <action
            android:id="@+id/action_myListingsFragment_to_navigation_profile"
            app:destination="@id/navigation_profile" />
    </fragment>

    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.example.testapptradeup.fragments.EditProfileFragment"
        android:label="Chỉnh sửa hồ sơ"
        tools:layout="@layout/fragment_edit_profile" >
        <action
            android:id="@+id/action_editProfileFragment_to_navigation_profile"
            app:destination="@id/navigation_profile" />
    </fragment>

    <fragment
        android:id="@+id/publicProfileFragment"
        android:name="com.example.testapptradeup.fragments.PublicProfileFragment"
        android:label="fragment_public_profile"
        tools:layout="@layout/fragment_public_profile" />

</navigation>