<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"> <!-- Thêm hiệu ứng nhấn -->

    <!-- Main item content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Product Image -->
        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/img_post"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img"
                android:contentDescription="@string/product_image"
                tools:src="@drawable/img" />
        </androidx.cardview.widget.CardView>

        <!-- Product Information -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Title and Status Badge -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Balo da cổ điển"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"
                    tools:text="Balo da cổ điển" />

                <TextView
                    android:id="@+id/txt_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/status_badge_background"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="Đang hiển thị"
                    android:textColor="#34C759"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,TextContrastCheck"
                    tools:text="Đang hiển thị" />
            </LinearLayout>

            <!-- Price -->
            <TextView
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="2.500.000 đ"
                android:textColor="#333333"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText"
                tools:text="2.500.000 đ" />

            <!-- Location and Stats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:contentDescription="Vị trí"
                    android:src="@drawable/ic_location"
                    app:tint="#8E8E93"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/txt_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Tp.HCM, Việt Nam"
                    android:textColor="#8E8E93"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText,TextContrastCheck"
                    tools:text="Tp.HCM, Việt Nam" />
            </LinearLayout>

            <!-- Views, Offers, and Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_visibility"
                    app:tint="#8E8E93"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/txt_views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="#8E8E93"
                    android:textSize="12sp"
                    tools:ignore="TextContrastCheck"
                    tools:text="245" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_message"
                    app:tint="#8E8E93"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/txt_offers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="#8E8E93"
                    android:textSize="12sp"
                    tools:ignore="TextContrastCheck"
                    tools:text="3 đề nghị" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:contentDescription="Thời gian"
                    android:src="@drawable/ic_time"
                    app:tint="#8E8E93"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/txt_posted_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="2 ngày trước"
                    android:textColor="#8E8E93"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText,TextContrastCheck"
                    tools:text="2 ngày trước" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_more_options"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_more_vert"
            android:contentDescription="Tùy chọn khác"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            app:tint="#8E8E93"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <!-- Action Buttons (Edit and Delete) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/btn_edit_background"
            android:text="Sửa"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:ignore="ButtonStyle,HardcodedText,TouchTargetSizeCheck,VisualLintButtonSize" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/btn_delete_background"
            android:text="Xóa"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:ignore="ButtonStyle,HardcodedText,TouchTargetSizeCheck,VisualLintButtonSize" />
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F2F2F7" />
</LinearLayout>
