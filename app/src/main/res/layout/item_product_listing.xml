<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Ảnh sản phẩm -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/listing_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="Ảnh tin rao"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
            tools:ignore="HardcodedText,ImageContrastCheck"
            tools:src="@drawable/img_placeholder" />

        <!-- Khối thông tin bên phải -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <!-- (Các TextView cho title và price giữ nguyên...) -->
            <TextView
                android:id="@+id/listing_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                tools:text="Giày Chạy Bộ Nam Chính Hãng Siêu Bền Đẹp"/>

            <TextView
                android:id="@+id/listing_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                tools:text="850.000đ"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:ignore="NestedWeights" />

            <!-- (LinearLayout cho vị trí và thời gian giữ nguyên...) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                tools:ignore="UseCompoundDrawables">
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_location"
                    app:tint="@color/text_secondary"
                    android:contentDescription="icon vị trí"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:id="@+id/listing_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    tools:text="Quận 1, TP. Hồ Chí Minh"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp"
                tools:ignore="UseCompoundDrawables">
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_time"
                    app:tint="@color/text_secondary"
                    android:contentDescription="icon thời gian"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:id="@+id/listing_time_posted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    tools:text="2 giờ trước"/>
            </LinearLayout>
        </LinearLayout>

        <!-- <<< THÊM MỚI: Nút yêu thích >>> -->
        <ImageView
            android:id="@+id/favorite_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="top"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_favorite_outline"
            app:tint="@color/text_secondary"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Nút yêu thích"
            tools:ignore="HardcodedText" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>