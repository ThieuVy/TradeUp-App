                android:textColor="@color/text_primary"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <!-- Laptop -->
        <LinearLayout
            android:id="@+id/category_laptop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/soft_white"
                android:layout_marginBottom="6dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_laptop"
                    app:tint="@color/charcoal_black"
                    android:contentDescription="Art"
                    tools:ignore="HardcodedText" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laptop"
                android:textSize="11sp"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <!-- Other -->
        <LinearLayout
            android:id="@+id/category_other"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/category_others"
                android:layout_marginBottom="6dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:contentDescription="Other"
                    android:src="@drawable/ic_other"
                    app:tint="@color/soft_white"
                    tools:ignore="HardcodedText,ImageContrastCheck" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other"
                android:textSize="11sp"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>