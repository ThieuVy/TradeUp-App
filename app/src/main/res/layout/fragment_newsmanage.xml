<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    tools:context=".fragments.NewsFragment">

    <!-- Header Container -->
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/header_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Quản lý tin"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            tools:ignore="HardcodedText" />

        <!-- Search Button -->
        <ImageView
            android:id="@+id/btn_search"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search"
            android:contentDescription="Tìm kiếm"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            app:tint="#007AFF"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <!-- Status Filter Tabs -->
    <HorizontalScrollView
        android:id="@+id/status_filter_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_container"
        android:background="@android:color/white"
        android:scrollbars="none"
        android:paddingVertical="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            tools:ignore="VisualLintBounds">

            <TextView
                android:id="@+id/btn_all"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/filter_tab_selected"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:text="Tất cả (24)"
                android:textColor="#007AFF"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/btn_active"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="24dp"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:text="Đang hiện (18)"
                android:textColor="#8E8E93"
                android:textSize="14sp"
                tools:ignore="HardcodedText,TextContrastCheck" />

            <TextView
                android:id="@+id/btn_paused"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="24dp"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:text="Tạm dừng (3)"
                android:textColor="#8E8E93"
                android:textSize="14sp"
                tools:ignore="HardcodedText,TextContrastCheck" />

            <TextView
                android:id="@+id/btn_sold"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:text="Đã bán"
                android:textColor="#8E8E93"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Sort Container -->
    <LinearLayout
        android:id="@+id/sort_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/status_filter_container"
        android:background="@android:color/white"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sắp xếp: Mới nhất trước"
            android:textColor="#8E8E93"
            android:textSize="14sp"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <ImageView
            android:id="@+id/btn_sort_dropdown"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_filter"
            android:contentDescription="Tùy chọn sắp xếp"
            app:tint="#8E8E93"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/sort_container"
        android:background="#E5E5EA" />

    <!-- Main Content Area -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/divider">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/manage_posts_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:visibility="gone"
            tools:listitem="@layout/item_post_management" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/manage_empty_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_empty_listings"
            android:contentDescription="@string/no_posts"
            app:tint="#CCCCCC" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chưa có tin nào"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:layout_marginBottom="8dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tạo tin đầu tiên để bắt đầu\nbán hàng trên ứng dụng"
            android:textSize="14sp"
            android:textColor="#888888"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn_create_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Tạo tin ngay"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_primary"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <!-- Loading State -->
    <LinearLayout
        android:id="@+id/manage_loading_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="visible">

        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đang tải danh sách tin..."
            android:textSize="14sp"
            android:textColor="#666666"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</RelativeLayout>