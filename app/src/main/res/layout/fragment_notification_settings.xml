<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light"
    tools:context=".fragments.NotificationSettingsFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Cài đặt thông báo"
        app:navigationIcon="@drawable/ic_arrow_back"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switch_new_messages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông báo tin nhắn mới"
            android:textSize="16sp"
            android:checked="true"
            android:paddingVertical="12dp"
            tools:ignore="HardcodedText,VisualLintButtonSize" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switch_price_offers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông báo khi có đề nghị giá"
            android:textSize="16sp"
            android:checked="true"
            android:paddingVertical="12dp"
            tools:ignore="HardcodedText,VisualLintButtonSize" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switch_listing_updates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cập nhật về tin đăng"
            android:textSize="16sp"
            android:checked="true"
            android:paddingVertical="12dp"
            tools:ignore="HardcodedText,VisualLintButtonSize" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switch_promotions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông báo khuyến mãi từ TradeUp"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            tools:ignore="HardcodedText,VisualLintButtonSize" />

    </LinearLayout>
</LinearLayout>