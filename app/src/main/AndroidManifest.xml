<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:name=".MyApplication"
        android:icon="@drawable/logo_1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TestAppTradeUp"
        tools:targetApi="31">

        <!-- ========== BẮT ĐẦU PHẦN SỬA LỖI ========== -->
        <!--
            Thêm thẻ meta-data này để vô hiệu hóa việc tự động thu thập dữ liệu
            màn hình của Firebase Analytics, giải quyết xung đột với Stripe PaymentSheet.
        -->
        <meta-data
            android:name="google_analytics_automatic_screen_reporting_enabled"
            android:value="false" />
        <!-- ======================================== -->


        <!-- SỬA LỖI: Đặt LoginActivity làm màn hình khởi động -->
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/Theme.TestAppTradeUp"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.MainActivity"
            android:windowSoftInputMode="adjustPan"
            android:exported="true"/>

        <activity
            android:name=".activities.RegisterActivity"
            android:theme="@style/Theme.TestAppTradeUp"
            android:exported="false">
        </activity>

        <activity android:name=".activities.ForgotPasswordActivity"
            android:theme="@style/Theme.TestAppTradeUp"
            android:exported="false"/>
        <activity android:name=".activities.EmailVerificationActivity"
            android:theme="@style/Theme.TestAppTradeUp"
            android:exported="false"/>
    </application>

</manifest>